.grid_12
  %h1 Pending Sets
.clear
.grid_12
  .setsControls
    %button.deleteSelectedSet(href="#") Delete selection
  %table.display.setsTable
    %thead
      %tr
        %th Requester
        %th Request date
        %th Stain
        %th Tissue
        %th Pigs
        %th Comment
        %th Delivered
    %tbody
      - pendingSets.each
        %tr.setRow
          %input.id(type="hidden" value=it._id)
          %input.rev(type="hidden" value=it._rev)
          %input.summary(type="hidden" value="$it.tissue $it.stain")
          %td.requester= it.requester
          %td.requestDate= it.requestDate
          %td.stain= it.stain
          %td.tissue= it.tissue
          %td.pigs= (it.pigIds ?: []).size()
          %td.comment= it.comment
          %td.deliveryDate= it.deliveryDate ?: ""

            
            
        